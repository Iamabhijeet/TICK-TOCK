<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.encloode.tick_tock.autoClockOut">
    <ImageButton
        android:id="@+id/autoClockout_B_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/exit"
        android:background="@color/background_material_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/autoClockout_B_makeChange"
        android:src="@drawable/correct"
        android:background="@color/background_material_light"
        android:layout_above="@+id/gridLayout2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="13"
        android:columnCount="17"
        android:layout_below="@+id/autoClockout_B_exit"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayout2">

        <Spinner
            android:layout_row="0"
            android:layout_column="2"
            android:id="@+id/autoClockout_s_spinnerMonth"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_gravity="left"
            android:gravity="left"
            android:contentDescription="Select a Month"
            android:entries="@array/months"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Day:"
                android:textSize="20sp"
                android:layout_gravity="center"/>
            <EditText
                android:layout_row="0"
                android:layout_column="5"
                android:inputType="number"
                android:ems="3"
                android:hint="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"/>
        </LinearLayout>

        <CheckBox
            android:layout_row="0"
            android:layout_column="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change date"
            android:textSize="20sp"
            android:id="@+id/checkBox2"
            android:gravity="center"
            android:layout_gravity="center"
            android:checked="false"
            android:layout_columnSpan="10" />

        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timePicker"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="center"/>

        <CheckBox
            android:layout_row="3"
            android:layout_column="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Time"
            android:textSize="20sp"
            android:id="@+id/checkBox"
            android:gravity="center"
            android:layout_gravity="center"
            android:checked="false"
            android:layout_columnSpan="10" />

    </GridLayout>




</RelativeLayout>
