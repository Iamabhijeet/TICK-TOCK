<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="3">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/back"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:onClick="onClickBack_to_ownerMenu"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Choose An Employee"
            android:textStyle="bold"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Go to ADD EMPLOYEE to add employees."
            android:textSize="18dp"
            android:id="@+id/edittimeEmptyView"
            android:layout_marginTop="80dp"
            android:layout_alignTop="@+id/displaytotaltime_two_LV_employee_time"
            android:layout_centerHorizontal="true" />

        <ListView
            android:id="@+id/edittime_one_EmployeeList"
            android:layout_width="350dp"
            android:layout_height="310dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="1dp" />

        <CalendarView
            android:id="@+id/edittime_one_calendarView"
            android:layout_width="350dp"
            android:layout_height="330dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginLeft="100dp"
            android:paddingTop="13dp" />

        <TextView
            android:id="@+id/edittime_one_TF_employeeChosen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Employee: "
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:id="@+id/imageView3"
            android:layout_row="0"
            android:layout_column="3"
            android:src="@drawable/forward"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:onClick="onClickNext_to_2"
            android:clickable="true"
            android:background="@color/background_material_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Choose a Date"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:id="@+id/textView2"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginLeft="210dp"/>

        <TextView
            android:id="@+id/edittime_one_TF_dateChosen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Date Chosen: "
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"/>
    </GridLayout>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:src="@drawable/encloode"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
