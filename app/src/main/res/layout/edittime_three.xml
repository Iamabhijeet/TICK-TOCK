<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/edittime_three_TF_topMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textColor="#ff0000"
        tools:text="DELETE/SAVE?"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="39dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button5" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="NO"
        android:textSize="30dp"
        android:id="@+id/button4"
        android:layout_below="@+id/gridLayout"
        android:layout_toEndOf="@+id/gridLayout" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="YES"
        android:textStyle="bold"
        android:textSize="30dp"
        android:id="@+id/button5"
        android:layout_below="@+id/gridLayout"
        android:layout_alignEnd="@+id/textView11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CHANGE SUMMARY:"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/textView11"
        android:layout_below="@+id/edittime_three_TF_topMsg"
        android:layout_marginTop="20dp"/>

    <GridLayout
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:rowCount="4"
        android:columnCount="2"
        android:id="@+id/gridLayout"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
      >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Employee:"
            android:textStyle="bold"
            android:id="@+id/textView6"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/edittime_three_ET_employee"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Date:"
            android:textStyle="bold"
            android:id="@+id/textView9"
            android:layout_marginTop="5dp"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:layout_marginTop="5dp"
            android:id="@+id/edittime_three_ET_date"
            android:layout_row="1"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Previous Time:"
            android:textStyle="bold"
            android:id="@+id/textView12"
            android:layout_marginTop="5dp"

            android:layout_row="2"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="5dp"
            android:text="Large Text"
            android:id="@+id/edittime_three_ET_previousTime"
            android:layout_row="2"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="New Total Time:"

            android:textStyle="bold"
            android:id="@+id/textView14"
            android:layout_marginTop="5dp"
            android:layout_row="3"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/edittime_three_ET_newTime"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginTop="5dp"/>




    </GridLayout>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:src="@drawable/encloode"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>