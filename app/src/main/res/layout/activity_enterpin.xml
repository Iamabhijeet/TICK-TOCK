<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.encloode.tick_tock.enterpin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ENTER YOUR 4 DIGIT PIN"
        android:textSize="30sp"
        android:textColor="#111111"
        android:id="@+id/enterpin_t_instruction"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/enterpin_i_encloodelogo"
        android:src="@drawable/encloode"
        android:layout_above="@+id/enterpin_gl_options"
        android:layout_alignParentStart="true"
        />

<GridLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:columnCount="3"
    android:id="@+id/enterpin_gl_options"
    android:layout_centerVertical="true">

</GridLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/enterpin_TF_pin"
        android:layout_below="@+id/enterpin_t_instruction"
        android:maxLength="4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Forgot Password?"
        android:id="@+id/textView30"
        android:clickable="true"
        android:onClick="onClickForgotPassword"
        android:layout_below="@+id/enterpin_TF_pin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />
    // The only to disable the settings button is to make a keypad from scratch and not create those buttons.


</RelativeLayout>
