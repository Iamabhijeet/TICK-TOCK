<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.encloode.tick_tock.enterpin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ENTER YOUR 4 DIGIT PIN"
        android:textSize="30sp"
        android:textColor="#111111"
        android:id="@+id/enterpin_t_instruction"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enterpin_et_pin"
        android:layout_below="@id/enterpin_t_instruction"
        android:layout_centerHorizontal="true" />

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="3"
        android:rowCount="4"
        android:orientation="horizontal"
        android:id="@+id/gridLayout"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_column="0"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="1" />
        <Button
            android:layout_column="1"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="2" />
        <Button
            android:layout_column="2"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="3" />
        <Button
            android:layout_row="1"
            android:layout_column="0"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="4" />
        <Button
            android:layout_row="1"
            android:layout_column="1"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="5" />
        <Button
            android:layout_row="1"
            android:layout_column="2"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="6" />
        <Button
            android:layout_row="2"
            android:layout_column="0"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="7" />
        <Button
            android:layout_row="2"
            android:layout_column="1"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="8" />
        <Button
            android:layout_row="2"
            android:layout_column="2"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="9" />
        <Button
            android:layout_row="3"
            android:layout_column="1"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="0" />
    </GridLayout>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="-50dp"
        android:id="@+id/enterpin_i_encloodelogo"
        android:src="@drawable/encloode"
        android:layout_alignParentBottom="true" />

<GridLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:columnCount="3"
    android:id="@+id/enterpin_gl_options"
    android:layout_below="@id/gridLayout">
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="DELETE"
        android:backgroundTint="@color/white"
        android:id="@+id/enterpin_b_delete"
        android:textSize="30sp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="CLEAR"
        android:id="@+id/enterpin_b_clear"
        android:backgroundTint="@color/white"
        android:textSize="30sp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="EXIT"
        android:backgroundTint="@color/white"
        android:id="@+id/enter_pin_exit"
        android:textSize="30sp" />
</GridLayout>



</RelativeLayout>
