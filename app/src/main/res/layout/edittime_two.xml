<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/edittime_two_TF_statementofdatechoosen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="John's Hours For:           12/08/2016"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
      />

    <TextView
        android:id="@+id/edittime_two_TF_previousTimeWorked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Previous Time Worked:  12hrs 5mins"

        android:layout_marginTop="10dp"
        android:layout_below="@+id/edittime_two_TF_statementofdatechoosen"
        android:layout_alignStart="@+id/edittime_two_TF_statementofdatechoosen" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Change Time To:"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/edittime_two_ET_hours"
        android:layout_alignStart="@+id/edittime_two_TF_previousTimeWorked" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edittime_two_ET_hours"
        android:layout_marginStart="31dp"
        tools:text="12"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/edittime_two_TF_previousTimeWorked"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginTop="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hours"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/edittime_two_ET_hours"
        android:layout_toEndOf="@+id/edittime_two_ET_hours"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        tools:text="58"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/edittime_two_ET_minutes"
        android:layout_alignTop="@+id/edittime_two_ET_hours"
        android:layout_alignEnd="@+id/edittime_two_TF_previousTimeWorked" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Minutes"
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/textView5"
        android:layout_toEndOf="@+id/edittime_two_ET_minutes" />

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE "
        android:id="@+id/button2"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="300dp"
        android:layout_above="@+id/imageView4"
        android:layout_alignEnd="@+id/edittime_two_ET_minutes"
        android:layout_marginBottom="59dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DISCARD"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/button2"
        android:layout_toEndOf="@+id/textView8" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:src="@drawable/encloode"
        android:layout_row="2"
        android:layout_column="0"
        android:id="@+id/imageView4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"

        />


</RelativeLayout>