<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.encloode.tick_tock.changePin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter ID"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/change_pin_TF_idEntered"
        android:layout_alignBottom="@+id/textView"
        android:maxLength="2"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name: "
        android:id="@+id/textView27"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text=" "
        android:id="@+id/change_pin_TF_name"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_toEndOf="@+id/textView27" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New Pin:"
        android:id="@+id/textView28"
        android:layout_below="@+id/change_pin_TF_name"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/activity_change_pin_TF_newPin"
        android:maxLength="4"
        android:layout_toEndOf="@+id/textView28"
        android:layout_below="@+id/change_pin_TF_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Retype Pin:"
        android:id="@+id/textView44"
        android:layout_below="@+id/textView28"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="false"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/activity_change_pin_TF_reenterPin"
        android:maxLength="4"
        android:layout_toEndOf="@+id/textView44"
        android:layout_below="@+id/textView28"
        android:imeOptions="actionDone"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@drawable/back"
        android:background="@color/background_material_light"
        android:clickable="true"
        android:onClick="onClickExit"
        android:layout_marginEnd="27dp"
        android:layout_alignBottom="@+id/textView27"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:background="@color/background_material_light"
        android:src="@drawable/correct"
        android:layout_alignBottom="@+id/textView44"
        android:layout_alignStart="@+id/imageButton"
        android:onClick="onClickSubmit" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:src="@drawable/encloode"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>
