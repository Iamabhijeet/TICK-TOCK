<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.encloode.tick_tock.enterpassword"
    android:background="@color/background_material_light">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ENTER PASSWORD"
        android:id="@+id/textView5"
        android:layout_above="@+id/done"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/secondpassword"
        android:singleLine="true"
        android:layout_marginLeft="280dp"
        android:layout_alignBottom="@+id/done"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton6"
        android:src="@drawable/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/background_material_light"
        android:onClick="onclickback" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton7"
        android:src="@drawable/exit"
        android:layout_alignTop="@+id/imageButton6"
        android:layout_marginLeft="750dp"
        android:background="@color/background_material_light"
        android:onClick="main" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:src="@drawable/encloode"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/done"
        android:src="@drawable/correct"
        android:background="@color/background_material_light"
        android:nestedScrollingEnabled="false"
        android:onClick="passmethod"
        android:layout_marginLeft="750dp"
        android:layout_marginTop="15dp"

        android:layout_below="@+id/imageButton7" />
</RelativeLayout>
